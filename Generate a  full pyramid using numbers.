def pattern(n):
    for i in range(1, n+1):
        for j in range(n-i):
            print(' ', end = "")
        l = []
        for j in range(i, (2*i)):
            l.append(str(j))
        for j in range((2*i)-2, i-1, -1):
            l.append(str(j))
        print(''.join(l))
        
n = int(input())
pattern(n)
